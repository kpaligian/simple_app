<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
"http://www.w3.org/TR/html4/loose.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>>@ViewBag.Title - Simple Application</title>
        <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.min.css"/>
        <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
        @Styles.Render("~/Content/css")
		
    </head>
    <body>
         @RenderSection("featured", required: false)
        
        <div class="container-fluid" ng-app="simple.app">
            <div class="row-fluid">
                <div class="col-md-12" style="margin:20px 0 20px 0;">
                    <nav>
                        <a ui-sref="empty">Prev/</a>
                        <a ui-sref="applications">Current</a>
                    </nav>
                </div>
                <div class="col-md-2">
                    <!--Sidebar-->
                    <nav ui-view="sidebarView">
						
                    </nav>
                </div>
				
                <!-- Main Content -->
                <div class="col-md-10" ui-view="mainContentView">
                    <input type="text" ng-model="search.$" placeholder="Search"/>
                    <h1>Applicants</h1>
                    <div ng-controller="simple.applications.ApplicantsCtrl">
                        {{applicants}}
                    </div>
                </div>

            </div>

        </div>

        <script type="text/javascript" src="~/Scripts/jquery-2.0.3.js"></script>
        <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
        <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
        <script type="text/javascript" src="~/Scripts/angular-ui-router.min.js"></script>
        <script type="text/javascript" src="~/Web/src/src.js"></script>
    </body>
</html>
